!!!
%html
  %head
    %title RSS Reader
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    %meta{:name => "viewport", :content => "width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=0;"}
    = csrf_meta_tags
  %body
    #wide-container
      #float-topbox
        = render :partial => "topbar"
        - if flash[:notice]
          .notice.info= flash[:notice]
        - if flash[:warning]
          .notice.warning= flash[:warning]
        - if flash[:error]
          .notice.error= flash[:error]

        #tool
          #paging-status
            = image_tag 'ajax-loader.gif'
          #unread_count
            =raw "#{t('unread')} <span id='total-count'>#{@entries.total_count}</span> #{t('entry')}"

      = yield
