= form_for @feed do |f|
  - if @feed.errors.any?
    #error_explanation
      %h2= "#{pluralize(@feed.errors.count, "error")} prohibited this feed from being saved:"
      %ul
        - @feed.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :xml_url
    = f.text_field :xml_url
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :last_checked_at
    = f.datetime_select :last_checked_at
  .actions
    = f.submit 'Save'
